<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="template" client="site" method="upgrade">
	<name>qhtml5</name>
	<creationDate>15/09/2016</creationDate>
	<author>Quantility</author>
	<authorEmail>assistenza@quantility.it</authorEmail>
	<authorUrl>http://www.quantility.it</authorUrl>
	<copyright>Copyright (C) 2017 Quantility.it, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>2.6.0dev build 11/05/2017</version>
	<description>TPL_QHTML5_XML_DESCRIPTION</description>
	<files>
		<folder>css</folder>
		<folder>files</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>		
		<folder>language</folder>
		<filename>index.html</filename>
		<filename>qhtml5.png</filename>
		<filename>index.php</filename>
		<filename>head.php</filename>
		<filename>template.php</filename>
		<filename>error.php</filename>
		<filename>component.php</filename>
		<filename>templateDetails.xml</filename>
	</files>

	<positions>
		<position>top</position>
		<position>logo</position>
		<position>menu</position>
		<position>payoff</position>
		<position>section-top</position>
		<position>left</position>
		<position>center-top</position>
		<position>center-bottom</position>
		<position>right</position>
		<position>section-bottom</position>
		<position>footer</position>
		<position>copyright</position>
		<position>error-404</position>
	</positions>
		
	<languages folder="language">
		<language tag="it-IT">templates/qhtml5/language/it-IT/it-IT.tpl_qhtml5.ini</language>
		<language tag="it-IT">templates/qhtml5/language/it-IT/it-IT.tpl_qhtml5.sys.ini</language>
	</languages>
		
	<config>
		
		<fields name="params">
			
			<fieldset name="Stile" label="Stile">
				<field name="msapplication-TileColor" type="color" default="#eee"
					label="Tile Color"
					description="MS Application Tile Color" />
				<field name="theme-color" type="color" default="#eee"
					label="Theme Color"
					description="Theme Color" />
			</fieldset>
			
			<fieldset name="jquery" label="Javascript">
				 <field 
					name="jqueryui"
					type="list"
					default="1"
					label="Inclusione jQuery UI" 
					description="Scegliere se includere nel template jQuery UI e/o JQueryUI con Sortable">
					<option
						value="0">Non includere jQuery UI</option>
					<option
						value="1">jQuery UI</option>
					<option
						value="2">jQuery UI + Sortable</option>
				 </field>
				 <!-- <field 
					name="jquerymobile"
					type="list"
					default="1"
					label="Inclusione jQuery Mobile" 
					description="Scegliere se includere nel template jQuery Mobile">
					<option
						value="0">jQuery Mobile 1.4.2</option>
					<option
						value="1">Non includere jQuery Mobile</option>
				 </field> -->
				 <field 
					name="jsbottom"
					type="list"
					default="1"
					label="Inclusione Javascript fine pagina"
					description="Scegliere se includere nel template prima della chiusura del body gli scripts Javascript contenuti nel file js/plugins.js">
					<option
						value="0">Includi plugins.js</option>
					<option
						value="1">Non includere</option>
				 </field>	
			</fieldset>

			<fieldset name="template" label="Impostazioni Template">
				<field 
					name="showcomponent"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="Visualizzare com_component in Home?" 
					description="Scegli se visualizzare gli articoli (Joomla o K2) o i componenti nella Home Page">
					<option
						value="0">Si</option>
					<option
						value="1">No</option>
				 </field>
			</fieldset>
			
			<fieldset name="customcode" label="Codice personalizzato">
				<!-- &lt;HEAD&gt; -->
				<field 	name="after_head_open"
					type="textarea"
					label="Codice subito dopo apertura HEAD"
					description="Inserisci codice personalizzato da caricare appena aperto il tag HEAD"
					filter="raw">
				</field>
				<field 	name="before_head_close"
					type="textarea"
					label="Codice subito prima chiusura HEAD"
					description="Inserisci codice personalizzato da caricare prima di chiudere il tag HEAD"
					filter="raw">
				</field>
				<!-- &lt;/HEAD&gt; -->				
				<!-- &lt;BODY&gt; -->
				<field 	name="after_body_open"
					type="textarea"
					label="Codice subito dopo apertura BODY"
					description="Inserisci codice personalizzato da caricare appena aperto il tag BODY"
					filter="raw">
				</field>
				<field 	name="before_body_close"
					type="textarea"
					label="Codice subito prima chiusura BODY"
					description="Inserisci codice personalizzato da caricare prima di chiudere il tag BODY"
					filter="raw">
				</field>
				<!-- &lt;/BODY&gt; -->
			</fieldset>
			
			<fieldset name="setbootstrap" label="Bootstrap">
				<field 
					name="bootstrap"
					type="radio"
					class="btn-group"
					default="0"
					label="Bootstrap JS" 
					description="Carica Bootstrap JS">
					<option value="0">No</option>
					<option value="1">2.x (Joomla!)</option>
					<option value="2">3.x</option>
					<option value="3">Ultima versione</option>
				 </field>
				 <field 
					name="bootstrapcss"
					type="radio"
					class="btn-group"
					default="0"
					label="Bootstrap CSS" 
					description="Caricamento Bootstrap CSS">
					<option value="0">No</option>
					<option value="1">Bootstrap</option>
					<option value="2">Bootstrap + Responsive</option>
					<option value="3">Boostrap + Responsive + Extended</option>
				 </field>
			</fieldset>
			<fieldset name="mobile" label="Mobile">
				<field 
					name="handheldfriendly"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="HandHeldFriendly" 
					description="Attiva il metatag HandHeldFrindly per migliorare il riconoscimento su mobile del sito">
					<option
						value="1">Si</option>
					<option
						value="0">No</option>
					
				 </field>
				 <field 
					name="apple-app-fullscreen"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="Web App Fullscreen" 
					description="Attiva il metatag specifico Apple per mostrare il sito/webapp a schermo intero">
					<option
						value="1">Si</option>
					<option
						value="0">No</option>
					
				 </field>
				 <field type="spacer" name="mobilespacer" label="Avanzate" />
				 <field 
					name="user-scalable"
					type="radio" class="btn-group btn-group-yesno"
					default="no"
					label="user-scalable" 
					description="user-scalable">
					<option value="yes">Si</option>
					<option	value="no">No</option>					
				 </field>
				 
				 <field 
					name="user-scalable"
					type="radio" class="btn-group btn-group-yesno"
					default="no"
					label="user-scalable" 
					description="user-scalable">
					<option value="yes">Si</option>
					<option	value="no">No</option>					
				 </field>
				 
				 <field 
					name="initial-scale"
					type="number"
					default="1"
					label="initial-scale" 
					description="initial-scale"
					filter="raw"
					min="1" max="10" step="0.5"
					showon="user-scalable:yes"
				/>
				<field 
					name="minimum-scale"
					type="number"
					default="1"
					label="minimum-scale" 
					description="minimum-scale"
					filter="raw"
					min="1" max="10" step="0.5"
					showon="user-scalable:yes"
				/>
				<field 
					name="maximum-scale"
					type="number"
					default="1"
					label="maximum-scale" 
					description="maximum-scale"
					filter="raw"
					min="1" max="10" step="0.5"
					showon="user-scalable:yes"
				/>
				 				 
			</fieldset>
			<fieldset name="honeypot" label="Project Honeypot">
				<field 
					name="enable_honeypot"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="Attivare l'anti spam Honeypot?" 
					description="Attiva un particolare sistema antispam che raccoglie i click di bot e li inserisce nel progetto Honeypot">
					<option
						value="0">No</option>
					<option
						value="1">Si</option>
				 </field>
				<field 
					name="honeypot_file"
					type="textarea"
					label="File (solo file con estensione.php)" 
					description="Scrivi il nome del file (posizionato in public_html) per il progetto Honeypot"
					filter="raw"
					showon="enable_honeypot:1"
				/>
			</fieldset>
			<fieldset name="microdata" label="Microdati Sito Web">
				<field 
					name="enable_md"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="Attivare i microdati (WIP)?" 
					description="Attiva solo (per ora) un microdato scherma.org per identificare il macrotipo di sito">
					<option
						value="0">No</option>
					<option
						value="1">Si</option>
				 </field>
				<field 
					name="md_sitetype"
					type="list"
					default="0"
					label="Tipo di Sito Web"
					showon="enable_md:1"
					description="Scegli il tipo di sito web tra i disponibili specificati dai microdati schema.org">
					<option
						value="WebSite">WebSite</option>
					<option
						value="LocalBusiness">LocalBusiness</option>
					<option
						value="Store">Store</option>
						
				 </field>
			</fieldset>
		</fields>
	</config>
	
</extension>
